<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:textColor="@color/colorWhite"
            android:background="#1D1D1D"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|center"
            android:textColor="@color/colorWhite"
            android:background="#1D1D1D"
            android:textSize="30sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>t>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/sin"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/cosine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/cos"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/tangent"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/tan"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/log"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/ln"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/lon"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/opening_bracket"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="("
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/closing_bracket"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text=")"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="^"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/square_root"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/Square_Root"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/factorial"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="!"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/math_pie"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/pie"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/NLe"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/e"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/inverse"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/inverse"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/radians"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/radians"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/degrees"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/degree"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@color/colorOrange"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/clear"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/percentage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/percentage"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/BACKSPACE"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/division"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_operations"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/number7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/seven"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number8"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/eight"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number9"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/nine"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/multiplication"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/multiplication"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_operations"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/number4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/four"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/five"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/six"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/substraction"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/minus"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_operations"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/number1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/one"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/two"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/three"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/addition"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/addition"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_operations"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/number00"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/double_zero"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/number0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/zero"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/dot"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_numbers"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/equal_to"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:background="@color/colorWhite"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>